<html lang="en">
  <head>
    <!-- ... (your head content) ... -->
  </head>
  <body>
    <h1>Home</h1>
    <h2>Hello {{naming}}</h2>

    <form action="/add-question" method="post">
      <label for="question">Add Question:</label>
      <input type="text" id="question" name="question" required />
      <input type="hidden" name="name" value="{{naming}}" />
      <button type="submit">Submit</button>
    </form>

    <form action="/logout" method="post">
      <button type="submit">Logout</button>
    </form>
    <div>
      <h3>Questions:</h3>
      {{#each questions}}
        <div>
          <p>asks: {{user.name}} - {{question}}</p>

          <!-- Reply form -->
          <form action="/add-reply" method="post">
            <input type="text" name="reply" placeholder="Your Reply" required />
            <input type="hidden" name="questionId" value="{{this._id}}" />
            <input type="hidden" name="name" value="{{naming}}" />
            <button type="submit">Reply</button>
          </form>

          <!-- Display replies for this question -->
          {{#if this.replies.length}}
            <h4>Replies:</h4>
            {{#each this.replies}}
              <p>{{user.name}} replied: {{this.reply}}</p>
            {{/each}}
          {{/if}}
        </div>
      {{/each}}
    </div>
  </body>
</html>