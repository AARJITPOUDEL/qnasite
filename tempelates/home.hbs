<html lang="en">
  <head>
    <!-- ... (your head content) ... -->
  </head>
  <body>
    <h1>Home</h1>
    <h2>Hello {{naming}}</h2>

    <form action="/add-question" method="post">
      <label for="question">Add Question:</label>
      <input type="text" id="question" name="question" required />
      <input type="hidden" name="name" value="{{naming}}" />
      <button type="submit">Submit</button>
    </form>

    <form action="/logout" method="post">
      <button type="submit">Logout</button>
    </form>

    <div>
      <h3>Questions:</h3>
      {{#each questions}}
        <div>
          <p>asks: {{user.name}} - {{question}}</p>

          <!-- Reply form -->
          <form action="/add-reply" method="post">
            <label for="reply">Reply:</label>
            <input type="text" id="reply" name="reply" required />
            <input type="hidden" name="questionId" value="{{this._id}}" />
            <input type="hidden" name="name" value="{{naming}}" />
            <button type="submit">Submit</button>
          </form>

          <!-- Display replies for this question -->
          {{#each this.replies}}
            <p>{{user.name}} - {{reply}}</p>
          {{/each}}
        </div>
      {{/each}}
    </div>

  </body></html>