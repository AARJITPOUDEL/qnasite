}


.content p{
	width: 250px;
	line-height: 26px;
	font-size: 18px;
	text-align: justify;
  }
  
  .cursor{
	position: fixed;
	width: 30px;
	height: 30px;
	border: 1px solid skyblue;
	border-radius: 50%;
	left: 0;
	top: 0;
	pointer-events: none;
	transform: translate(-50%, -50%);
	transition: .1s;
  }
  
  .cursor2{
	position: fixed;
	width: 8px;
	height: 8px;
	background-color: #c6c6c6;
	border-radius: 50%;
	left: 0;
	top: 0;
	pointer-events: none;
	transform: translate(-50%, -50%);
	transition: .15s;
  }
  
  .content:hover ~ .cursor{
	transform: translate(-50%, -50%) scale(1.5);
	background-color: #c6c6c6;
	opacity: .5;
  }
  
  .content:hover ~ .cursor2{
	opacity: 0;
  }
